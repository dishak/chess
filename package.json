{
  "name": "chess-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:migrate": "cd ./packages/db && npm run db:dev",
    "backend:dev": "cd ./apps/backend && npm run build && npm run start",
    "start:backend": "npm run db:migrate && npm run backend:dev",
    "ws:dev":"cd ./apps/ws && npm run dev",
    "start:ws":"npm run db:migrate && npm run ws:dev",
    "start:frontend":"cd ./apps/frontend && npm run dev"
    
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
